<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tt_list_item_bk"
    android:orientation="vertical" >

  <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/tt_item_add_fri_portrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tt_item_add_fri_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tt_item_add_fri_portrait"
            android:layout_toRightOf="@id/tt_item_add_fri_portrait"
            android:layout_marginLeft="11dp"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxEms="12"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:textColor="@color/Black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tt_item_add_fri_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tt_item_add_fri_name"
            android:layout_below="@id/tt_item_add_fri_name"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:ems="17"
            android:singleLine="true"
            android:paddingBottom="3dp"
            android:textColor="@color/message_body_text_color"
            android:textSize="14sp" />

       
        <Button
            android:id="@+id/tt_item_add_fri_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/tt_show_head_toast_bg"
            android:layout_marginRight="10dp"
            android:text="@string/tt_activity_user_info_accept"
            android:textColor="@color/White"/>
    </RelativeLayout>
	
</LinearLayout>