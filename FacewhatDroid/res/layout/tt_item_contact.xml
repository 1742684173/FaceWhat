<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tt_fragment_contact_sort"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/contact_category_title_bk"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:textColor="@color/contact_category_text_color"
        android:textSize="13sp"
        android:visibility="gone" />

    <View
        android:id="@+id/tt_fragment_contact_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:background="@color/default_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/tt_list_item_bk"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="9dp"
        android:paddingLeft="10dp"
        android:paddingTop="8.5dp" >

        <CheckBox
            android:id="@+id/tt_fragment_contact_checkBox"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:button="@drawable/checkbox_background"
            android:clickable="false"
            android:focusable="false"
            android:visibility="gone" />

        <com.chat.ui.widget.ImageViewCircle
            android:id="@+id/tt_fragment_contact_portrait"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tt_login_logo" />

        <TextView
            android:id="@+id/tt_fragment_contact_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/contact_name_color"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tt_fragment_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/contact_realname_color"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>