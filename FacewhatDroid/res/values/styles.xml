<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme" parent="android:Theme.Holo.Light">
    </style>
    
    <!-- 背景颜色#177CB0 -->
     <style name="CustomWindowTitleBackground">
        <item name="android:background">#177CB0</item>
    </style>
    
    <!-- WelcomeActivity no title-->
    <style name="welcome_activity" parent="android:Theme.Light.NoTitleBar"> 
    </style>
 
    <!-- LoginActivity -->
    <style name="login_activity" parent="android:Theme"> 
        <item name="android:windowTitleSize">60dip</item>  
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>
    
    <!-- RegestActivity -->
    <style name="regest_activity" parent="android:Theme"> 
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:windowTitleSize">60dip</item>  
    </style>
    
    <!-- MainActivity -->
    <style name="main_activity" parent="android:Theme"> 
        <!-- 定义标题栏颜色 -->
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:windowTitleSize">60dip</item>  
    </style>
    
    <!-- SendOneMessageActivity -->
    <style name="chat_activity" parent="android:Theme"> 
        <!-- 定义标题栏颜色 -->
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:windowTitleSize">60dip</item>  
    </style>
    
</resources>